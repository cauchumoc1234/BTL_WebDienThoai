.header
  .top
    a.home(href='/home')
      .logo
    form(action="/search" , method="get").search-box
      input(type='text', placeholder='Search...',name="q")
      button
        i.fa.fa-search(aria-hidden='true')
    .customer
      a(href='/login') Sign in
      | /
      a(href='/login') Sign up
    .cart
      a(href='/cart')
        i.fa.fa-cart-plus(aria-hidden='true')
  .row-menu
    ul
      li.item.drop
        a(href='/search?q=')
          i.fa.fa-mobile(aria-hidden='true')
          span &nbsp
          | ALL
        ul.sub-menu
          li.item
            a(href='/search?q=apple') APPLE
          li.item
            a(href='/search?q=samsung') SAMSUNG
          li.item
            a(href='/search?q=huawei') HUAWEI
