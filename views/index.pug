extends layout
block title
  title Home
block main
    .main
        span acc: admin pass: admin1
        .slide-show
            img.slide-item(src='/image/SlideShow/slide_1.png', alt='Slide 1')
            img.slide-item(src='/image/SlideShow/slide_2.png', alt='Slide 2')
            img.slide-item(src='/image/SlideShow/slide_3.png', alt='Slide 3')
            img.slide-item(src='/image/SlideShow/slide_4.png', alt='Slide 4')
            button.left-btn(onclick='plusDivs(-1)') &#x276E;
            button.right-btn(onclick='plusDivs(1)') &#x276F;
        p(style='color: red; font: bold 2em Arial; text-align: center;') Hottest Product
        .products.container
         .row
          each product in hots
              .product-item.card(style='width: 20%;height:100%')
                  a(href='/product/'+product.productID)
                    img.card-img-top(src='image/Product/id_'+product.productID+".png", alt='product')
                    .card-body(style="padding:0 0;")
                      h5.card-title(style="text-align:center;") #{product.productName}
                      .card-text
                        p Price: #{product.buyPrice} M
                        p CPU: #{product.productCPU}
                        p RAM: #{product.productRAM} GB
                        p ROM: #{product.productROM} GB
                        p Brand: #{product.productBrand}
                  button(name = product.productID,style="width:100%,margin-top:10px").btn.add-to-cart.mx-auto
                      i.fa.fa-cart-plus(aria-hidden='true')
block script
    script(src='https://unpkg.com/axios/dist/axios.min.js')
    script(src='/js/main.js')
    script(src='/js/cart.js')