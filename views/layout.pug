doctype html
head
  meta(charset='utf-8')
  meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
  block title
  link(rel='icon', type='image/png', href='/image/Logo/fav_logo.png',sizes='16x16')
