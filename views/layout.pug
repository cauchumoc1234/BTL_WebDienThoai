      form.search-box.col-md-6.container(action='/search', method='get')
        .input-group.mb-3
          input.form-control(type='text', placeholder='Search',name="q" aria-describedby='basic-addon2')
          .input-group-append
            button.btn.btn-outline-secondary
              i.fa.fa-search(aria-hidden='true')
      .customer.col-md-2
        a.badge.badge-primary.mr-2(href='/customer') Sign in
        a.badge.badge-primary(href='/customer') Sign up
      .cart.col-md-1
        a.btn.btn-success.btn-lg(href='/customer/cart')
          i.fa.fa-cart-plus(aria-hidden='true')
  .row-menu.container-fluid
    ul.row(style='padding:0; text-align: center;')
      li.item.drop.col-sm-3
        a(href='/search?q=')
          i.fa.fa-mobile(aria-hidden='true')
