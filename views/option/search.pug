extends ../layout
block main
   .products 
        each product in products
            a.product-item(href='#')
                div
                    .image
                        img(src='image/Product/Product_1.png', alt='')
                        .overlay
                            button.add-to-cart
                                i.fa.fa-cart-plus(aria-hidden='true')
                    .info
                        .name=product.productName
                        .price=product.buyPrice
