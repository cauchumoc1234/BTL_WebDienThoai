extends ../layout
block css
      link(rel='stylesheet', href='/css/cart.css')
block main
    h1.mx-auto Your Cart
    if list_item
      table.mx-auto
        tr
            th Product name
            th Price
            th.align_center Amount
            th.align_center Option
        each item in list_item
            tr
                td #{item.productName}
                td #{item.buyPrice} M
                td.align_center 
                    input.amount(type='number', name=item.productID, min='1', max=item.quantityInStock ,value=item.amount)
                td.align_center
                  form(action="/customer/cart/delete/"+ item.productID , method= "post") 
                    button.btn.btn-danger.del-btn Delete
      a.btn.btn-primary.float-md-left.buy-btn(href="cart/order") Buy all
block script
    script(src='https://unpkg.com/axios/dist/axios.min.js')
    script(src='/js/cart.js')
